    * {
        box-sizing: border-box;
        font-family: math;

    }

    img {
        opacity: .4;
    }

    .backbtn button {
        top: 2%;
        left: -7%;
        font-size: 27px;
        cursor: pointer;
        border: none;
        width: 40px;
        background-color: #65937c;
        color: white;
        border-radius: 200px;
        position: absolute;
    }
    .backbtn button:hover{
        background-color: #5e7c6d;
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
